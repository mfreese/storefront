
+<%= link_to "New Item", new_item_path %>

  <table class="table table-striped">

 <tr>
   <th>Title</th>

  <th>
    Price
  </th>

   <th>Description</th>
   <th>
     Category
   </th>
 <th>
   Quantity
 </th>
 </tr>
 <% @items.each do |item| %>
 <tr>
   <td><%= item.title %></td>
  <td>
    <%= number_to_currency(item.price/100.0) %>
  </td>
   <td><%= item.description %></td>
   <td>
     <%= item.category %>
   </td>
 <td>
   <%= item.order.sum("quantity") %>
 </td>
 <td>
   <%= link_to "edit", edit_item_path(id: item.id) %>
 </td>
 </tr>
<% end   %>
</table>
